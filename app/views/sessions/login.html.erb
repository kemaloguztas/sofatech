<div>

    <h2>Sign In</h2>
    <%= form_tag '/login' do %>
        Username: <%= text_field_tag :username %><br>
        Password: <%= password_field_tag :password %><br>
        <%= submit_tag "Login" %>
    <% end%>

    <%= form_tag '/signup' do %>
        <%= submit_tag "Signup" %>
    <% end%>
</div>