<% page_title "Edit Request | sofatech" %>
<body>
  <div class="container">
    <h1>Editing Request</h1>

    <p>
      <strong>Subject:</strong>
      <%= @request.subject %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @request.description %>
    </p>

    <%= form_with model: @request, url: request_path do |form| %>
      <p>
        <strong>State:</strong>
        <%= form.select :state, options_for_select(["new", "in progress", "done"]) %>
      </p>

      <div class="actions-edit">
        <%= form.submit "Update Status" %>
      </div>
    <% end %>
  </div>
</body>
