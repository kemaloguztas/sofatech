<% page_title "Show Request" %>
<div id="show-page">
  <div class="page-banner">
    <h3> Hey, <%= current_user.username + "!" " Danke für deine Anfrage." %> <br> <br> Wir kümmern uns schnellstmöglich darum! </h3>
  </div>

  <table class="container-edit">
    <tr class="table-row">
      <td><strong>Subject:</strong></td>
      <td><%= @request.subject %></td>
    </tr>
    <tr class="table-row">
      <td><strong>Description:</strong></td>
      <td><%= @request.description %></td>
    </tr>
    <tr class="table-row">
      <td><strong>State:</strong></td>
      <td><%= @request.state %></td>
    </tr>
    <tr class="table-row">
      <td><strong>Date:</strong></td>
      <td><%= @request.created_at.strftime('%d %b %Y %H:%M') %></td>
    </tr>
  </table>
    <div class="button-container">
      <%= link_to 'Edit', edit_request_path(@request), class: 'button button-edit' if current_user.admin? %>
      <%= link_to 'Requests', requests_path, class: 'button button-requests' %>
</div>
